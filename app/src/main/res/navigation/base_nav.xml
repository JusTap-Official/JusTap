<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_nav"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.binay.shaw.justap.ui.mainScreens.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_addEditFragment"
            app:destination="@id/addEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/history"
        android:name="com.binay.shaw.justap.ui.mainScreens.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/settings"
        android:name="com.binay.shaw.justap.ui.mainScreens.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settings_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_settings_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_settings_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/scanner"
        android:name="com.binay.shaw.justap.ui.mainScreens.QRGeneratorFragment"
        android:label="fragment_q_r_generator"
        tools:layout="@layout/fragment_q_r_generator" >
        <action
            android:id="@+id/action_scanner_to_scannerFragment"
            app:destination="@id/scannerFragment" />
    </fragment>
    <fragment
        android:id="@+id/scannerFragment"
        android:name="com.binay.shaw.justap.ui.mainScreens.qrReciever.ScannerFragment"
        android:label="fragment_q_r_scanner"
        tools:layout="@layout/fragment_q_r_scanner" >
        <action
            android:id="@+id/action_scannerFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@id/scanner" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.binay.shaw.justap.ui.mainScreens.appSettingsFragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.binay.shaw.justap.ui.mainScreens.appSettingsFragments.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.binay.shaw.justap.ui.mainScreens.qrReciever.ResultFragment"
        android:label="fragment_scan_result"
        tools:layout="@layout/fragment_scan_result" >
        <argument
            android:name="resultString"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="isResult"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/addEditFragment"
        android:name="com.binay.shaw.justap.ui.mainScreens.accountFragments.AddEditFragment"
        android:label="fragment_add_edit"
        tools:layout="@layout/fragment_add_edit" >
        <argument
            android:name="mode"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="accounts"
            app:argType="com.binay.shaw.justap.model.Accounts"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>